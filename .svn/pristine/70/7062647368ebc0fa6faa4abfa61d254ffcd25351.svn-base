package com.isartdigital.builder.game.sprites.buildings;

import com.isartdigital.builder.game.def.BuildingDef;
import com.isartdigital.builder.game.manager.RessourceManager;
import com.isartdigital.builder.game.sprites.Building;

/**
 * ...
 * @author Roman CHEVASSU
 */
class Casino extends BuildingGamePlay
{
	
	var gainedRoom : Int = 100;

	public function new(pDefinition:BuildingDef) 
	{
		super(pDefinition);
		
	}
	
	override function onCreation() {
		super.onDestruction();
		RessourceManager.getInstance().maxStock += gainedRoom;
	}
	
	override function onDestruction() 
	{
		super.onDestruction();
		RessourceManager.getInstance().maxStock -= gainedRoom;
	}
}